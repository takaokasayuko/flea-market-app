<div class="content-form">
  <h1 class="ttl"><%= form_ttl %></h1>

  <div class="form">
    <%= form_with(model: @user, url: form_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, class: 'form-input' %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, class: 'form-input' %>
      </div>

      <%= f.submit button_text, class: "button__button-submit" %>
    <% end %>

    <%= link_to link_text, link_path, class: "form__link" %>
  </div>